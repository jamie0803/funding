<script src="${APP_PATH}/ztree/jquery.ztree.all-3.5.min.js"></script>
<script src="${APP_PATH}/jquery/layer/layer.js"></script>
<script type="text/javascript">
    $(function () {
        $(".list-group-item").click(function () {
            if ($(this).find("ul")) {
                $(this).toggleClass("tree-closed");
                if ($(this).hasClass("tree-closed")) {
                    $("ul", this).hide("fast");
                } else {
                    $("ul", this).show("fast");
                }
            }
        });

        var setting = {
            check: {
                enable: true
            },
            view: {
                selectedMulti: false,
                /*addDiyDom: function (treeId, APP_PATH, treeNode) {
                    var icoObj = $("#" + treeNode.tId + "_ico"); // tId = permissionTree_1, $("#permissionTree_1_ico")
                    if (treeNode.icon) {
                        icoObj.removeClass("button ico_docu ico_open").addClass("fa fa-fw " + treeNode.icon).css("background", "");
                    }
                },*/
            },
            async: {
                enable: true,
                url: "${APP_PATH}/role/loadDataAsync.do?roleid=${param.roleid}",
                autoParam: ["id", "name=n", "level=lv"]
            },
            callback: {
                onClick: function (event, treeId, json) {

                }
            }
        };
        //$.fn.zTree.init($("#treeDemo"), setting,ZNodes); //同步访问数据

        //异步加载树的数据
        $.fn.zTree.init($("#treeDemo"), setting);
    });

    function assignPermission() {
        var treeObj = $.fn.zTree.getZTreeObj("treeDemo");       //获取当前树结构
        var nodes = treeObj.getCheckedNodes(true);              //获取选中节点
        if (nodes == 0) {
            layer.msg("请选择许可进行分配", {time: 1000, icon: 5, shift: 6});
        } else {
            var data = {roleid: "${param.roleid}"}
            $.each(nodes, function (i, permission) {
                data["ids[" + i + "]"] = permission.id;
            })
            $.ajax({
                type: "post",
                url: "${APP_PATH}/role/assignRolePermission.do",
                data: data,
                success: function (result) {
                    if (result.success) { //分配成功不需要刷新页面
                        layer.msg("分配许可成功", {time: 1000, icon: 6, shift: 6});
                    } else {
                        layer.msg("分配许可失败", {time: 1000, icon: 5, shift: 6});
                    }
                }
            })
        }
    }
</script>
